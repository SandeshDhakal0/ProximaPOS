                                            if (customer.Id == _customer?.Id)
                                            {
                                                <tr>
                                                    <td class="fw-bold">@customer.FirstName</td>
                                                    <td class="fw-bold">@customer.LastName</td>
                                                    <td class="fw-bold">@customer.Contact</td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary btn-sm @(customer.Id == (_customer?.Id ?? -1) ? "btn-selected" : "")" @onclick="() => HandleCustomerSelection(customer.Id)" style="background-color:#082248;">Select</button>
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td>@customer.FirstName</td>
                                                    <td>@customer.LastName</td>
                                                    <td>@customer.Contact</td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary btn-sm @(customer.Id == (_customer?.Id ?? -1) ? "btn-selected" : "")" @onclick="() => HandleCustomerSelection(customer.Id)">Select</button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>                             
                            </div>                           
                        }
                        else
                        {
                            <p>No customers found.</p>
                        }

                        @if (_showAddCustomerView)
                        {
                            <div id="customertab">
                                <br><br>
                                <div id="customertab">
                                    <p class="addcustomerhead">Add Customer</p>
                                    <hr class="belowaddcusline">
                                    <form class="mb-1 mt-md-4" @onsubmit="AddCustomer">
                                        <div class="row">
                                            <div class="col">
                                                <p class="sticknameandinput">First Name<sup>*</sup></p>
                                                <input class="addcustomerinputs" type="text" @bind="@_addCustomer.p_first_name" required="required">
                                                <br><br>
                                                <p class="sticknameandinput mt-3">Contact<sup>*</sup></p>
                                                <input class="addcustomerinputs" type="text" @bind="@_addCustomer.p_contact" required="required">
                                                <div>
                                                    <br>
                                                    <a class="customercancel" @onclick="CloseCustomerDialog">Cancel<sup>*</sup></a>
                                                    <button class="customersubmit" type="submit">Submit</button>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <p class="sticknameandinput">Last Name<sup>*</sup></p>
                                                <input class="addcustomerinputs" type="text" @bind="@_addCustomer.p_last_name" required="required">
                                                <br><br>
                                                <p class="sticknameandinput mt-3">Address<sup>*</sup></p>
                                                <input class="addcustomerinputs" type="text" @bind="@_addCustomer.p_address" required="required">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(_message))
                            {
                                <span>@_message</span>
                            }
                        }
                    </div>
                </div>
            }
            @if (_showRemarksView)
            {
                <div class="tab-content" id="remarks">
                    <div class="container">
                        <p><a @onclick="OnGoBackClick"><i class="fa fa-arrow-left backarrow" aria-hidden="true"></i></a>
                        </p>
                        <p class="remarkstext">REMARKS</p>
                        <div class="card m-5 remarkscard container">
                            <form action="" class="mt-2">
                                <div class="container">
                                    <div class="row">
                                        <div class="col selectors">
                                            <p><input type="checkbox" name="">Color can fade</p>
                                            <p><input type="checkbox" name="">option can be anything</p>
                                            <p><input type="checkbox" name="">other</p>
                                        </div>
                                        <div class="col selectors">
                                            <p><input type="checkbox" name="">Holes on cloth</p>
                                            <p><input type="checkbox" name="">option can be anything</p>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}