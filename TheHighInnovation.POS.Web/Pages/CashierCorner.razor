                        {
                            <a @onclick="OnGoBackClick">
                                <div class="sticky-top" id="goback">
                                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                                </div>
                            </a>
                        }
                        <div class="row products">
                            @if (_showMainCategories)
                            {
                                foreach (var item in _items)
                                {
                                    var image = item.ItemImage;
                                    <div class="card cardstyle" id="@($"p_{item.ItemId}")">
                                        @if (item.HasSubCategories)
                                        {
                                            <a>
                                                <img src="@image" alt="product" onerror="this.onerror=null;this.src='images/defaulticon.svg';"
                                                     @onclick="() => OnCategoryClick(item.ItemId, item.ItemTitle)">
                                            </a>
                                            <i class="fa fa-star cardstar" aria-hidden="true"></i>
                                        }
                                        else
                                        {
                                            if (item.ItemType == "Product")
                                            {

                                                <a>
                                                    <img src="@image" alt="product" onerror="this.onerror=null;this.src='images/defaulticon.svg';"
                                                         @onclick="() => AddProductToTable(item.ItemId, item.ItemTitle)">
                                                </a>
                                            }
                                            else
                                            {
                                                <a><img src="@image" onerror="this.onerror=null;this.src='images/defaulticon.svg';" alt="product"></a>
                                            }
                                        }
                                        <p class="card-text">@item.ItemTitle</p>
                                        @* <p class="card-text">@item.HasSubCategories</p> *@
                                    </div>
                                }
                            }
                            else
                            {
                                foreach (var item in _subcategories)
                                {
                                    var image = item.Item.ItemImage;
                                    <div class="card cardstyle" id="@($"p_{item.Item.ItemId}")">
                                        @if (item.Item.HasSubCategories)
                                        {
                                            <i class="fa fa-star cardstar" aria-hidden="true"></i>
                                            <a><img src="@image" alt="product"
                                                    @onclick="() => OnCategoryClick(item.Item.ItemId, item.Item.ItemTitle)"></a>
                                        }
                                        else
                                        {
                                            if (item.Item.ItemType == "Product")
                                            {
                                                <a><img src="@image" alt="product"
                                                        @onclick="() => AddProductToTable(item.Item.ItemId, item.Item.ItemTitle)"></a>
                                            }
                                            else
                                            {
                                                <a><img src="@image" alt="product"></a>
                                            }
                                        }
                                        <p class="card-text">@item.Item.ItemTitle</p>
                                       @*  <p class="card-text">@item.Item.HasSubCategories</p> *@
                                    </div>
                                }
                            }
