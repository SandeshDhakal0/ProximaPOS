@page "/cashier-corner"
@using TheHighInnovation.POS.Web.Services.Base
@inject BaseService BaseService
@inject IJSRuntime _jsRuntime

@if (_showLandingPage)
{
    <div class="row landingpage">
        @if (_showLandingCashierView)
        {
            <div class="col-3">
                <div class=" card maincard1">
                    <div class="tableedit">
                        <table id="datatable" class="Invoice">
                            <thead>
                            <tr>
                                
                                <th class="th2">Items</th>
                                <th class="th2">Qty</th>
                                <th class="th2">Rate</th>
                                <th class="th2">Dis</th>
                                <th class="th4">Total Amount</th>
                            </tr>
                            </thead>
                            
                            <tbody class="scrollfortable">
                            @foreach (var product in _itemsToAdd)
                            {
                                if (product.Quantity == 0)
                                {
                                    continue;
                                }
                                if (_selectedProduct?.Id == product.Id)
                                {
                                        <tr style="background-color: #d9d9d9;margin-top:5px; height:5vh;" @onclick="@(DeselectedProduct)">
                                         <td style="width:40%; overflow:hidden;">@product.Title</td>
                                        <td>@product.Quantity</td>
                                        <td>@product.UnitPrice</td>
                                        <td>@product.Discount</td>
                                        <td>@product.TotalPrice</td>
                                        @* <td>
                                            <button class="selectbtn" type="button" >Deselect</button>
                                        </td> *@
                                    </tr>
                                }
                                else
                                {
                                        <tr style="height:5vh;" @onclick="@(() => SetSelectedProduct(product.Id, product.Title,product.Quantity,product.Discount, product.UnitPrice))">

                                            <td style= "width:40%; overflow:hidden;">@product.Title</td>
                                        <td>@product.Quantity</td>
                                        <td>@product.UnitPrice</td>
                                        <td>@product.Discount</td>
                                        <td>@product.TotalPrice</td>
                                       @*  <td>
                                            <button class="selectbtn" type="button" >Select</button>
                                        </td> *@
                                    </tr>
                                }
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="container invoicebutton">
                        <span class="btn1">
                            @if (_selectedProduct == null)
                            {
                                <button type="button" @onclick="@(IncrementQuantity)" disabled="disabled">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            }
                            else
                            {
                                <button type="button" @onclick="@(IncrementQuantity)">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            }
                        </span>
                        <span class="btn2">
                            @if (_selectedProduct == null)
                            {
                                <button type="button" @onclick="@(DecrementQuantity)" disabled="disabled">
                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                </button>
                            }
                            else
                            {
                                <button type="button" @onclick="@(DecrementQuantity)">
                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                </button>
                            }
                        </span>
                    </div>
                    <div class="invoicetable">
                        <table>
                            <tbody>
                            <tr>
                                <th>Payable Amount</th>
                                    <td>Rs. @String.Format("{0:0.00}", _subTotalAmount)</td>

                            </tr>
                            <tr>
                                <th>Tax Amount</th>
                                    <td>Rs. @String.Format("{0:0.00}", _taxAmount)</td>

                            </tr>
                            <tr>
                                <th>Item Total Discount</th>
                                
                                    <td>Rs. @String.Format("{0:0.00}", _itemDiscount)</td>
                            </tr>
                            <tr>
                                <th>Overall Discount (as a whole)</th>
                                
                                    <td>Rs. @String.Format("{0:0.00}", _discount)</td>

                            </tr>

                            <tr>
                                <th>Total Discount</th>
                                
                                    <td>Rs. @String.Format("{0:0.00}", _totalDiscount)</td>
                            </tr>
                            <tr>
                                <th>Total Amount</th>
                                    <td>Rs. @String.Format("{0:0.00}", _totalAmount)</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-6 card maincard2 mt-0 oi-align-center">
