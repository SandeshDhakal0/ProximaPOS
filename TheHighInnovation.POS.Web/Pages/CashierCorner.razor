                                        <span class="discountbyprice">
                                            <a @onclick="ToggleDiscountbypercentage" id="discountButtonPercentage">
                                                <button class="functionbutton">
                                                    Dis
                                                    <img src="/images/cashiercornericons/discountpercentage.png" class="discountpriceimage" />
                                                </button>
                                            </a>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="discountbyprice">
                                            <a @onclick="ToggleDiscountbypercentage" id="discountButtonPercentage">
                                                <button class="functionbutton" style="font-weight:600; color:red;">
                                                    Dis
                                                    <img src="/images/cashiercornericons/discountpercentage.png" class="discountpriceimage" />
                                                </button>
                                            </a>
                                        </span>
                                    }


                                </span>
                                <a>
                                    <button class="functionbutton">

                                        <img src="/images/salesReturn.png" />
                                        <br />
                                        Sales Return
                                    </button>
                                </a>
                                @if (!_isSaleSelected)
                                {

                                    <a @onclick="SetSale">
                                        <button class="functionbutton">
                                            <i class="fa-percent buttonicons" aria-hidden="true"></i>
                                            <br />Sale
                                        </button>
                                    </a>

                                }
