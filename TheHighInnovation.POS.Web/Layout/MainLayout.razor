@using BlazorBootstrap
@using Blazored.LocalStorage
@using TheHighInnovation.POS.Web.Services.Base
@inherits LayoutComponentBase
@inject BaseService BaseService
@inject NavigationManager NavigationManager
@inject ILocalStorageService LocalStorageService

<div class="mainpage">
    <CascadingValue Value="@_globalState">
        @if (_globalState.UserId != 0)
        {
            <header>
                <NavMenu /> 
            </header>

            @if (_globalState.RoleType == 0) 
            {
                <div class="row">
                    @if (ShowSidebar) 
                    {
                        <div class="col-2">
                            <div class="sidebar">
                                <NavPanel /> 
                            </div>
                        </div>
                    }
                    <div class="col-@(ShowSidebar ? "10" : "12")">
                        <main>
                            <article class="content px-4">
                                @Body
                            </article>
                        </main>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <main>
                        <article class="content px-4">
                            @Body
                        </article>
                    </main>
                </div>
            }
        }
        else
        {
            <div class="row">
                <main>
                    <article class="content px-4">
                        @Body
                    </article>
                </main>
            </div>
        }

        <div class="footer">
            <Footer />
        </div>
       <div class="d-flex justify-content-center">
    <Spinner Type="SpinnerType.Border" />
</div>

    </CascadingValue>
</div>