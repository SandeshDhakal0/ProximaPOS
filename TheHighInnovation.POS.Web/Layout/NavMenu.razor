@using TheHighInnovation.POS.Web.Services.Base

@inject BaseService BaseService;
@inject NavigationManager NavManager;

<header>
    <div class="navbar" >
        <div class="col LOGO">
            <span class="THIP">THIP</span><span class="O">O</span><span class="S">S</span>
        </div>
        <div class="d-flex">
            <div class="navdate">
                <i class="fa-solid fa-calendar-days"></i> <span>@currentDate</span>
            </div>
            <i class="usericon fa-sharp fa-regular fa-user profile" ></i>
            <div class="row">
                <div class="col mt-2">
                    <p class="m-0 profilename">@_globalState.Name</p>
                    <p class="casheir">@_globalState.RoleName</p>
                </div>
                @if (_globalState is { RoleType: 0, CompanyId: not null })
                {
                    <div class="col logoutgroups" @onclick="SwitchToSettingsView">
                        <span class="d-flex">
                            <i class="fa-solid fa-repeat mx-1" style="font-size:18px;"></i><span class="logouttext d-flex">Switch</span>
                        </span>
                    </div>
                }
                <div class="col logoutgroups">
                    <span @onclick="LogoutHandler" class="d-flex">
                        <i class="fa-solid fa-right-from-bracket logouticon"></i><span class="logouttext" style="">Logout</span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>